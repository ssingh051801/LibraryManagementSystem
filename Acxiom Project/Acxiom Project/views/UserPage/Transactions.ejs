<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Library Actions</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
      margin: 20px 0;
    }
    th, td {
      border: 1px solid #ddd;
      padding: 8px;
      text-align: center;
    }
    th {
      background-color: #f2f2f2;
    }
    .logout-btn {
      display: inline-block;
      padding: 10px 20px;
      background-color: #ff4d4d;
      color: white;
      text-decoration: none;
      border-radius: 3px;
      font-size: 14px;
      margin-top: 20px;
      text-align: center;
    }
    .logout-btn:hover {
      background-color: #e60000;
    }
    .center {
      display: flex;
      justify-content: center;
    }
  </style>
</head>
<body>
  <h1>Library Transactions</h1>
  <table>
    <thead>
      <tr>
        <th>Home</th>
        <th>Transactions</th>
      </tr>
    </thead>
    <tbody>
      <% const rows = [
        { label: "Is book available?", name: "isBookAvailable" },
        { label: "Issue book?", name: "issueBook" },
        { label: "Return book?", name: "returnBook" },
        { label: "Pay Fine?", name: "payFine" }
      ]; %>
      <% rows.forEach(row => { %>
      <tr>
        <td><%= row.label %></td>
        <td>
          <input type="checkbox" name="<%= row.name %>" />
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>

  <!-- Log Out Button outside the table -->
  <div class="center">
    <a href="/logout" class="logout-btn">Log Out</a>
  </div>
</body>
</html>
